{
  "name": "welcome-to-my-garden",
  "description": "a platform allowing citizens to put their garden freely at disposal as a rudimentary campsite to travelers.",
  "version": "1.0.0",
  "scripts": {
    "build": "rimraf public/bundle && rollup -c",
    "build:prod": "cross-env NODE_ENV=production yarn run build",
    "dev": "rollup -c -w",
    "start": "sirv public --single",
    "deploy": "yarn run build && firebase deploy",
    "test": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5002 jest ./test",
    "test:watch": "cross-env FIRESTORE_EMULATOR_HOST=localhost:5002 jest --watchAll ./test"
  },
  "dependencies": {
    "sirv-cli": "^0.4.4",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.9",
    "@mapbox/mapbox-gl-geocoder": "^4.5.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@sveltech/routify": "^1.7.12",
    "bulma": "^0.8.2",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "firebase": "^7.14.6",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.4",
    "mapbox-gl": "^1.10.1",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "nprogress": "^0.2.0",
    "postcss": "^7.0.31",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^2.0.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-svg-import": "^1.5.1",
    "rollup-plugin-terser": "^5.3.0",
    "svelte": "^3.0.0",
    "svelte-i18n": "^3.0.4",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3"
  }
}
